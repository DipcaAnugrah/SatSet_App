<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_sinopsis.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/sinopsisImageView"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/film1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/sinopsisTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sinopsisImageView"
        android:layout_marginTop="16dp"
        android:text="Movie Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/sinopsisContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sinopsisTitleTextView"
        android:layout_marginTop="8dp"
        android:text="Sinopsis content goes here."
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
